{
  "files.associations": {
    "*.yaml": "home-assistant",
    "*.yml": "home-assistant"
  },
  "yaml.schemas": {
    "https://raw.githubusercontent.com/home-assistant/core/dev/homeassistant/components/automation/schema.json": ["automations.yaml"],
    "https://raw.githubusercontent.com/home-assistant/core/dev/homeassistant/components/dashboard/schema.json": ["*-dashboard.yml"]
  },
  "yaml.format.enable": true,
  "yaml.validate": true,
  "yaml.completion": true,
  "yaml.customTags": [
    "!include scalar",
    "!include_dir_list scalar",
    "!include_dir_named scalar",
    "!include_dir_merge_list scalar",
    "!include_dir_merge_named scalar",
    "!secret scalar"
  ],
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": true,
  "files.trimTrailingWhitespace": true
}